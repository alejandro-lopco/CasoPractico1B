pipeline {
    agent any
    stages {
        stage('Setup') {
            agent { node 'agente1' }  
            steps{
                bat '''
                    python -m pip install --upgrade pip
                    python -m pip install pytest
                    python -m pip install flask
                '''
            }
        }
        stage('serverSetup') {
            agent { node 'agente1' }  
            steps {
                powershell '''
                    Start-Process "java" -ArgumentList "-jar D:\\wiremock-standalone-3.10.0.jar --port 9090 --root-dir $env:WORKSPACE\\test\\wiremock"
                    Start-Sleep -Seconds 5
                    echo "Inicializado WireMock"
                    $env:FLASK_APP="app.api"
                    Start-Process "python" -ArgumentList "-m flask run"
                    Start-Sleep -Seconds 5
                    echo "Inicializado Flask"
                    '''
            }
        }
        stage('GetCode') {
            agent { node 'agente1' }
            steps {
                cleanWs()
                bat 'git clone https://github.com/alejandro-lopco/CasoPractico1A'
                stash includes: '**', name: 'repositorio'
            }
        }
        stage('unitTest') {
            agent { node 'agente2' }
            steps {
                catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                    unstash 'repositorio'
                    bat '''
                        set PYTHONPATH=%WORKSPACE%\\CasoPractico1B
                        python -m pytest --junitxml=result-unit.xml CasoPractico1B\\test\\unit
                    '''
                }  
                
            }
        }
        stage('restTest') {
            agent { node 'agente2' }
            steps {
                unstash 'repositorio'
                catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                    bat '''
                        set PYTHONPATH=%WORKSPACE%\\CasoPractico1B
                        python -m pytest --junitxml=result-rest.xml CasoPractico1B\\test\\rest
                        '''
                }
            }
        }
        stage('staticTest') {
            agent { node 'agente2' }
            steps {
                unstash 'repositorio'
                catchError (buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                    bat '''
                        pyhton -m flake8 --format=pylint --exit-zero app > flake8.out
                        '''
                    recordIssues tools: [flake8(name: 'Flake8', pattern: 'flake8.out')],
                        qualityGates: [
                            [threshold: 8, type: 'TOTAL', unstable: true],
                            [threshold: 10, type: 'TOTAL', unstable: false]
                        ]
                }
            }
        }        
    }
}
